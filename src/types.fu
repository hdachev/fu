let q_mutref            = 1 << 0;
let q_ref               = 1 << 1;
pub let q_rx_copy       = 1 << 2;
let q_rx_resize         = 1 << 3;

let TAGS =
[
    "mutref",
    "ref",
    "copy",
    "resize",
];


