// https://doc.rust-lang.org/nomicon/subtyping.html:

// Re: covariance of `T` in `Box<T>`:
//
// As it turns out, the argument for why it's ok for Box
//  (and Vec, Hashmap, etc.) to be covariant is pretty similar
//   to the argument for why it's ok for lifetimes to be covariant:
//    as soon as you try to stuff them in something like a mutable
//     reference, they inherit invariance and you're prevented
//      from doing anything bad.

fn areQualsAssignable(host: i32, guest: i32): bool
{
    return host & guest == host
        && (!(host & q_mutref) ||
              host & q_MUTINVAR == guest & q_MUTINVAR)
}


//

pub let CANNOT_definit_mutrefs = true;

pub fn isAssignable(host: Type, guest: Type, extra?!: i32): bool
{
    return host.modid == guest.modid
        && isCanonAssignable(host: host.canon, guest.canon)
        && areQualsAssignable(host: host.quals, guest.quals | extra)
        || guest.is_never
        || guest.is_zeroes && !(CANNOT_definit_mutrefs && host.quals & q_mutref);
}

pub fn isAssignableAsArgument(host: Type, guest: Type): bool
{
    // This has to go, it doesn't make amazing sense.
    return isAssignable(:host, :guest, extra: q_ref);
}


