let q_REF_EXTENSIONS
    = q_rx_copy
    | q_rx_resize;

let q_MUTINVAR = ~q_REF_EXTENSIONS;

let q_RELAXABLE
    = q_REF_EXTENSIONS
    | q_mutref;


