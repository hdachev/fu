fn find(haystack: <T>[..], needle: T[..] or T, start?: int or [], end?: int or []): int
{
    type Start  = typeof(start);
    type End    = typeof(end);

    // Keep things simple.
    if !(Start -> [] && End -> [])
    {
        let slice = Start -> [] ? haystack[      .. end]
                  : End   -> [] ? haystack[start ..    ]
                                : haystack[start .. end];

