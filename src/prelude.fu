            return "i";

    return n.i64.str; // TODO FIX use .integer or .arithmetic when we get these
}
    case (T.is::flags)
{
    mut res: string;
    for (fieldname i: T)
        if (n & "i")
            res ~= "i" ~ ", ";

    if (res)
        res.shrink(res.len - 2);

    return res;
}


