pub fn map(a: [$T], fn)
{
    mut res: fn($T)[];
    res.grow_junk(a.len);
    for (mut i = 0; i < a.len; i++)
        res[i] = fn(a[i]);

    return res;
}

pub fn each(a: [$T], fn)
{
    for (mut i = 0; i < a.len; i++)
        fn(a[i]);
}

pub fn clone(a: $T)
case ($T -> @copy) a;
case ($T -> [$U]) a.map(fn clone);
case ($T -> $T)
{
    mut res: $T;
    for (fieldname i: $T)
        res.i = a.i.clone();

    return res;
}


