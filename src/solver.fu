    fn mcom_LetInit(node: SolvedNode)
    {
        if (node.items && !node.is_ref && USE_mcom_lets)
        {
            let init = node.items[LET_INIT];
            if (init && init.is_ref)
            {
                // TODO FIX THIS MESS,
                //  the get/set stuff is real stupid.
                //
                shadow mut init = init;
                maybeCopyOrMove(init, node.type);
                node.MUT.items[LET_INIT] = init;
            }
        }
    }

    fn mcom_BlockReturns(node: SolvedNode)
    {
        if (!node.helpers)
            return;

        let h = Helpers(node.helpers);

        //
        if (USE_named_block_rets)
            mcom_BlockReturns_CopyOrMoveDecision(:h);

        // cpy/move.
        for (mut i = 0; i < h.returns.len; i++)
        {
            // TODO FIX nodeidx unstable because createCopy,
            //  ref to only is in smallvec -
            //   so createCopy invalidates the ref.
            //
            mut r = h.returns[i].items.only;
            maybeCopyOrMove(r, h.ret_actual);
            h.returns[i].MUT.items.only = r;
        }

        // We need to update the named lifetime if we've set one.
        if (node.type.is_ref && USE_named_block_rets)
            updateNamedLifetime(node, h.ret_actual);

        //
        relaxBlockVars(:h, relax_mask: RELAX_all);
    }

    fn mcom_BlockReturns_CopyOrMoveDecision(h: Helpers)
    {
        // Previously in solveJump, the move-vs-copy decision:
        for (mut i = 0; i < h.returns.len; i++)
        {
            mut expr = h.returns[i].items.only;
            mut type = expr.type;

            if (expr.is_ref)
            {
                type.lifetime = type.lifetime.Lifetime_unwind(:h.locals_start);
                let ltCompare = type.lifetime.Lifetime_vs(:h.locals_start || fail());

                if (ltCompare >= 0)
                {
                    if (ltCompare > 0)
                    {
                        expr = createMove(expr);
                    }
                    else
                    {
                        // Might survive, so we cant move,
                        //  might not survive, so we can't return reference,
                        //   so we have to copy.
                        //
                        // We'll try to prevent this from happening by hinting control flow
                        //  primitives such as and/or/ifs to copy preemptively
                        //   but this can happen after lt replace on callsite,
                        //    when return might point to a temporary argument.
                        //
                        expr = createCopy(expr);
                    }

                    h.returns[i].MUT.items.only = expr;
                    type                        = expr.type;
                }
            }

            // Report the unwound lifetime,
            //  but leave the original lifetime on the expr for bck & co.
            reportReturnType(:h, type);
        }

        if (h.ret_expect)
            checkAssignable(host: h.ret_expect, h.ret_actual,
                "Actual return type does not match annotation");
    }


    // Maybe-copy-or-move router.

    fn mcom_nodes(nodes: SolvedNode[])
        for (mut i = 0; i < nodes.len; i++)
            mcom_node(nodes[i]);

    fn mcom_node(node: SolvedNode)
    {
        mcom_nodes(node.items); _here = node.token;

        //
        let k = node.kind;

        if (k == "block")
            return mcom_BlockReturns(node);

        if (k == "let")
            return mcom_LetInit(node);

        // if (k == "call")
        //     return mcom_CallArgs(node);
        //
        // if (k == "arrlit")
        //     return mcom_Arrlit(node);
        //
        // if (k == "if")
        //     return mcom_IfConsAlt(node);
        //
        // if (k == "or")
        //     return mcom_OrAlts(node);
    }


