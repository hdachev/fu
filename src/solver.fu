    fn RWEvent_stack(nodeidx: i32, target: i32)
    {
        let nodeown = _current_fn.target || fail("RWEvent_stack: no current fn.");
        let node    = SolvedNode(:nodeown, :nodeidx);

        if (node.kind != "call")
            return "\n\tVia " ~ node.kind.qKW;

        // TODO this is the target we've written to,
        //  see which mutref args aliase it at the callsite, then descend.
        //
        if (target) {}

        let o = GET(node.target);
        return "\n\tAt call to " ~ o.name.qID;
    }

    fn qSTACK(written_via: ArgWrite, nodeown?: Target, mut seen?: Target[])
    {
        if (written_via.nodeidx < 0 || seen.len >= 8)
            return "";

        let callsite = written_via.callsite(nodeown || _current_fn.target);
        let target   = callsite.target;

        // Recursion abort.
        let rec = seen.has(target) && "recursively ";
        seen ~= target;

        let via = rec ? ""
                : qSTACK(target, written_via.arg_position, :seen);

        return "\n            " ~ rec ~ "via " ~ target.qWHAT
             ~ " at " ~ callsite.token.addr_and_snippet
             ~ via;
    }

    fn qSTACK(target: Target, position: i32, mut seen?: Target[])
    {
        let host_arg = target.args[position];
        if (host_arg.written_via)
            return host_arg.written_via.qSTACK(nodeown: target, :seen);

        return "";
    }


