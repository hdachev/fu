    fn runAllPasses(node: SolvedNode)
    {
        ///////////////////////////////
        if (SELF_TEST) test_node(node, "runAllPasses[0]");
        ///////////////////////////////

        bck_node(node);

        ///////////////////////////////
        if (SELF_TEST) test_node(node, "runAllPasses[1]");
        ///////////////////////////////

        mcom_node(node);

        ///////////////////////////////
        if (SELF_TEST) test_node(node, "runAllPasses[2]");
        ///////////////////////////////
    }


